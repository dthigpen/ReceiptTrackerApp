<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.davidthigpen.receiptreader.ui.ReceiptDetail.ReceiptItemsActivity"
    tools:showIn="@layout/activity_receipt_items"
    android:orientation="vertical"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/receipt_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        >


        <LinearLayout
            android:id="@+id/store_details_containter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/store_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store: "
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                />
            <EditText
                android:id="@+id/store_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Whole Foods"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp"
                android:focusedByDefault="false"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/receipt_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="18dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/receipt_date_edit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/store_details_containter"
            />
        <TextView
            android:id="@+id/receipt_date_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="01/18/2018"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toRightOf="@id/receipt_date_label"
            app:layout_constraintTop_toBottomOf="@id/store_details_containter"
            />

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/receipt_date_edit"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/price_subtotal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal:"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/divider_view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="6dp"
            />
        <TextView
            android:id="@+id/price_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/price_subtotal_label"
            android:text="63.25"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/price_tax_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price_subtotal_label"
            android:layout_marginBottom="6dp"
            android:text="Tax:"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/price_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/price_tax_label"
            android:text="5.06"
            android:textSize="18dp"
            />

        <View
            android:id="@+id/divider_view_total"
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="@id/price_subtotal"
            app:layout_constraintRight_toRightOf="@id/price_subtotal"
            app:layout_constraintTop_toBottomOf="@id/price_tax"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            />
        <TextView
            android:id="@+id/price_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_view_total"
            android:layout_marginBottom="6dp"
            android:text="Total:"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/price_total_label"
            android:text="68.25"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/items_list_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/price_total_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/receipt_items_list"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/receipt_info_container">


    </android.support.v7.widget.RecyclerView>
    />
</LinearLayout>
